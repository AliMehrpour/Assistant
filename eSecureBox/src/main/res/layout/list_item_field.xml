<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/floating_edit_text_icon_size"
        android:layout_height="@dimen/floating_edit_text_icon_size"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_25"
        android:layout_marginEnd="@dimen/margin_25"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:src="@drawable/icon_account_address"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/image_check_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_25"
        android:layout_marginEnd="@dimen/margin_25"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:src="@drawable/icon_check_blue"
        tools:ignore="ContentDescription"/>

    <com.volcano.esecurebox.widget.RobotoTextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_12"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_toRightOf="@id/icon"
        android:layout_toEndOf="@id/icon"
        android:layout_toLeftOf="@id/image_check_mark"
        android:layout_toStartOf="@id/image_check_mark"
        android:layout_centerVertical="true"
        android:background="@null"
        style="@style/Text.RegularDarker16"
        android:text="Address"/>

</RelativeLayout>