<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/create_new_field_horizontal_padding"
    android:paddingRight="@dimen/create_new_field_horizontal_padding">

    <com.volcano.esecurebox.widget.RobotoEditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center_vertical"
        android:inputType="text|textNoSuggestions|textCapWords"
        android:hint="@string/hint_name"
        style="@style/Text.RegularDark16" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner_field_type"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/margin_20"
        android:entries="@array/array_field_types"/>

</LinearLayout>