<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/image_category"
        android:layout_width="@dimen/circle_drawable_size"
        android:layout_height="@dimen/circle_drawable_size"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_25"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        tools:ignore="ContentDescription"/>

    <com.volcano.assistant.widget.RobotoTextView
        android:id="@+id/text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_16"
        android:paddingTop="@dimen/margin_16"
        android:paddingBottom="@dimen/margin_16"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/image_category"
        style="@style/Text.RegularDark16" />

    <ImageView
        android:id="@+id/image_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_16"
        android:src="@drawable/icon_check_blue"
        android:visibility="invisible"
        tools:ignore="ContentDescription"/>

</merge>