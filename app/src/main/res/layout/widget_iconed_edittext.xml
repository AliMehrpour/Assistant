<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_iconized_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height">

    <ImageView
        android:id="@+id/image_indicator"
        android:layout_width="@dimen/iconed_edittext_size"
        android:layout_height="@dimen/iconed_edittext_size"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_25"
        android:layout_centerVertical="true" />

    <com.volcano.assistant.widget.RobotoEditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_indicator"
        android:layout_centerVertical="true"
        android:background="@null"
        android:singleLine="true"
        android:inputType="textCapWords"
        style="@style/Text.RegularDark16" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/image_indicator"
        style="@style/Divider" />

</RelativeLayout>