<resources>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="FrameworkRoot.Theme" parent="Theme.AppCompat.Light" />
    <style name="FrameworkRoot.Widget" parent="Theme.AppCompat" />

    <style name="Theme.Assistant" parent="Theme.Assistant.Base" />

    <!-- Base application theme -->
    <style name="Theme.Assistant.Base" parent="FrameworkRoot.Theme">

        <item name="android:divider">#B6B6B6</item>
        <item name="android:textColorPrimaryInverse">#FFCDD2</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
        <item name="android:textColor">#212121</item>

        <item name="colorPrimary">@color/theme_primary</item> <!-- default Action Bar background (but not toolbar) -->
        <item name="colorPrimaryDark">@color/theme_primary_dark</item><!-- Status Bar color -->
        <item name="colorAccent">@color/theme_accent</item><!-- default value for colorControlActivated which is used to tint widgets -->

        <item name="toolbarStyle">@style/Theme.Assistant.Toolbar</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="Theme.Assistant.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="FloatingActionMenu">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="robotoTypeface">regular</item>
        <item name="android:background">@drawable/fab_label_background</item>
    </style>

    <style name="Text.MediumGrey14" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">@color/grey_3</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="robotoTypeface">medium</item>
    </style>

    <style name="Text.MediumWhite14" parent="@android:style/TextAppearance.Holo">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="robotoTypeface">medium</item>
    </style>

    <style name="Text.RegularRed13" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">@color/red_2</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="robotoTypeface">regular</item>
    </style>

    <style name="Text.RegularDark16" parent="@android:style/TextAppearance.Holo">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/grey_4</item>
        <item name="robotoTypeface">regular</item>
    </style>

    <style name="Text.RegularDark18" parent="@android:style/TextAppearance.Holo">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="robotoTypeface">regular</item>
    </style>

    <style name="Text.RegularGrey12" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">@color/grey_1</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="robotoTypeface">regular</item>
    </style>

    <style name="Text.RegularGrey14" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">@color/grey_4</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="robotoTypeface">regular</item>
    </style>

    <style name="Text.RegularGrey18" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">@color/grey_3</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="robotoTypeface">regular</item>
    </style>

    <style name="Text.RegularWhite14" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="robotoTypeface">regular</item>
    </style>

    <style name="Text.Indicator25" parent="@android:style/TextAppearance.Holo">
        <item name="android:textSize">@dimen/text_size_25</item>
        <item name="android:textColor">@color/theme_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="robotoTypeface">medium</item>
    </style>

    <style name="Toolbar.Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationItem" parent="@android:style/TextAppearance.Holo">
        <item name="robotoTypeface">medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ButtonFullWidth" parent="@android:style/TextAppearance.Holo">
        <item name="android:padding">@dimen/margin_16</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="robotoTypeface">medium</item>
    </style>

</resources>
