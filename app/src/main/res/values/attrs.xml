<resources>

    <declare-styleable name="FloatingActionButton">

        <attr name="colorNormal" format="color" />
        <attr name="colorPressed" format="color" />
        <attr name="colorRipple" format="color" />
        <attr name="shadow" format="boolean" />
        <attr name="type" format="enum">
            <enum name="normal" value="0" />
            <enum name="mini" value="1" />
        </attr>

    </declare-styleable>

    <declare-styleable name="FloatLabeledEditText">

        <attr name="floatTextAppearance" format="reference" />
        <attr name="floatPadding" format="reference|dimension" />
        <attr name="floatPaddingLeft" format="reference|dimension" />
        <attr name="floatPaddingTop" format="reference|dimension" />
        <attr name="floatPaddingRight" format="reference|dimension" />
        <attr name="floatPaddingBottom" format="reference|dimension" />
        <attr name="floatBackground" format="reference|color" />
        <attr name="floatHint" format="reference|string" />

    </declare-styleable>

    <declare-styleable name="IconedEditText">

        <attr name="hint" format="string|reference" />
        <attr name="showIcon" format="boolean" />

    </declare-styleable>

    <declare-styleable name="RobotoTextView">

        <attr name="robotoTypeface" format="enum">
            <enum name="regular" value="0"/>
            <enum name="medium" value="1"/>
            <enum name="black_italic" value="2"/>
        </attr>

    </declare-styleable>

</resources>