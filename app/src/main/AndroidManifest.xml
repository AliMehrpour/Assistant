<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.volcano.assistant" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.volcano.assistant.VlApplication"
        android:icon="@drawable/icon_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Assistant" >

        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.CreateAccountActivity"
            android:label="@string/hint_new_account"/>

        <activity
            android:name=".activity.PasscodeActivity"
            android:label="@string/label_passcode"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="com.volcano.assistant.action.PASSCODE"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.SignInActivity"
            android:screenOrientation="portrait"
            android:label="@string/label_sign_in" />
        
        <activity android:name=".activity.SignUpActivity"
            android:screenOrientation="portrait"
            android:label="@string/label_sign_up" />

        <activity
            android:name=".activity.SettingActivity"
            android:screenOrientation="portrait"
            android:label="@string/label_passcode" />

        <provider
            android:authorities="com.volcano.assistant"
            android:name=".provider.AssistantProvider"
            android:writePermission="com.volcano.assistant.permission.WRITE"
            android:label="@string/app_name"
            android:syncable="true" />

    </application>

</manifest>
